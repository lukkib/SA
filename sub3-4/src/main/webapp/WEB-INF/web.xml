<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>FilterServlet</servlet-name>
		<servlet-class>at.tugraz.sa.servlet.FilterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FilterServlet</servlet-name>
		<url-pattern>/filter</url-pattern>
	</servlet-mapping>

    <servlet>
        <servlet-name>ConnectionServlet</servlet-name>
        <servlet-class>at.tugraz.sa.servlet.ConnectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectionServlet</servlet-name>
        <url-pattern>/connection</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditorServlet</servlet-name>
        <servlet-class>at.tugraz.sa.servlet.EditorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditorServlet</servlet-name>
        <url-pattern>/editor</url-pattern>
    </servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
